{
	"name": "SCDTYPE2_Ex",
	"properties": {
		"folder": {
			"name": "SRi"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_EMPFILE",
						"type": "DatasetReference"
					},
					"name": "EMPFile"
				},
				{
					"dataset": {
						"referenceName": "DS_EMPTABLE",
						"type": "DatasetReference"
					},
					"name": "EMPTable"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "AddingIsActiveColumn"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as integer,",
				"          name as string,",
				"          address as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> EMPFile",
				"source(output(",
				"          id as integer,",
				"          name as string,",
				"          address as string,",
				"          isactive as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> EMPTable",
				"EMPFile derive(isactive = 1) ~> AddingIsActiveColumn"
			]
		}
	}
}